<html>
    <head>
        <title>Todo List</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <link href="/assets/styles.css" rel="stylesheet" type="text/css" />
        <script type="text/javascript" src="/assets/todo-list.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <div class="row">
                <h1>My Todo list</h1>
                <div id='todo-table'>
                    <% if(typeof errors !== 'undefined'){ %>
                        <ul class="list-group mb-3">
                            <% for(var i=0; i < errors.length; i++) { %>
                                <li class="list-group-item list-group-item-danger"><%= errors[i] %></li>
                            <% } %>
                        </ul>
                    <% } %>
                    <form method="POST" action="/todo">
                        <div class="form-group">
                            <input class="form-control" type="text" name="item" placeholder="Add new item..." required />
                        </div>
                        <button class="form-control" type="submit">Add Item</button>
                    </form>
                    <ul class="list-group">
                        <% for(var i=0; i < todos.length; i++) { %>
                            <li class="list-group-item" data-id="<%= todos[i].id %>"><%= todos[i].task %></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </body>
</html>